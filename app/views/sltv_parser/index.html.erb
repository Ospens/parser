<div class="form-group">
	<%= form_tag("/parser", method: 'post', :remote => true, :id => 'form') do %>
      <div class="input-group">
        <%= text_field_tag :q, nil, class: 'form-control mr-sm-2 link-tour', placeholder: 'Ссылка на турнир' %>
  	    <%= text_field_tag :page, nil, class: 'form-control mr-sm-2', placeholder: '#' %>
      </div>
      <div class="custom-control custom-checkbox">
        <%= check_box_tag :customCheck1, 'no', false, class: 'custom-control-input'%>
        <label class="custom-control-label" for="customCheck1">Этот турнир 1х1</label>
      </div>
      <div class='mt-3'/>
      <div class="input-group">
        <%= text_field_tag :start_count, nil, class: 'form-control mr-sm-2', placeholder: 'Парсинг по фильтрам кол-во игроков 1-15' %>
        <%= text_field_tag :end_count, nil, class: 'form-control mr-sm-2  ', placeholder: '1-15' %>
        <%= text_field_tag :page, nil, class: 'form-control mr-sm-2  ', placeholder: 'Номер прокрутки' %>
        <button  id="button" class="btn btn-outline-danger my-2 my-sm-0">Спарсить</button>
      </div>
      <br/>
	<% end %>
<div style="padding-top: 10px;"></div>
<input type="button" value="Скопировать таблицу" id='copy_table' class='btn btn-outline-success'>
<div class='clearfix'></div>
<div id="teams_sltv"></div>

